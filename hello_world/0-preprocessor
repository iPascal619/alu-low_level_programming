#!/bin/bash

# Check if the CFILE environment variable is set
if [ -z "$CFILE" ]; then
    echo "Error: CFILE environment variable is not set."
    exit 1
fi

# Define the output filename
OUTPUT_FILE="c"

# Run the C file through the preprocessor and save the result
gcc -E "$CFILE" -o "$OUTPUT_FILE"

# Check if the preprocessing was successful
if [ $? -eq 0 ]; then
    echo "Preprocessing completed successfully. Output saved in $OUTPUT_FILE"
else
    echo "Error: Preprocessing failed."
fi

